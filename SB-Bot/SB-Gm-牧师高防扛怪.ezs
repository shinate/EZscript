[script]
//==========================
// F.H.D - 光芒
// 牧师(高防)
// 2018-10-26
//==========================

//==== 键位设置 >>> ====
// C:67 选择目标（NPC）
ExtVar[0]=67
// Q:81选择自己
ExtVar[1]=81
// X:88 开/关姿势
ExtVar[2]=88
// F5:116 进攻姿势
ExtVar[3]=116
// F6:117 精确姿势
ExtVar[4]=117
// F7:118 防御姿势
ExtVar[5]=118
// F8:119 正常姿势
ExtVar[6]=119
// F12:123 大药
ExtVar[7]=123
// F1:112 单体小回血
ExtVar[8]=112
// F2:113 群体治疗
ExtVar[9]=113
// F3:114 单体持续回血
ExtVar[10]=114
// F4:115 群体持续回血
ExtVar[11]=115
//==== <<< 键位设置 ====

//==== 时间设置 >>> ====
//大药持续时间(秒)
ExtVar[20]=3500
//姿势 & buff持续时间(秒)
ExtVar[21]=1700
//持续加血时间(秒)
ExtVar[22]=30
//==== <<< 时间设置 ====

//==== 其他设置 >>> ====
//3:进攻姿势, 4:精确姿势, 5:防御姿势, 6:正常姿势
//默认为正常姿势
ExtVar[31]=ExtVar[5]
//==== <<< 其他设置 ====

//==========================
//初始化
//大药计时器
var1=0
//姿势buff计时器
var2=0
//持续加血计时器
var3=0

//==== 主进程 >>> ====
Main:
Call BuffPosture
Call BuffMedicine
Call RHD
Call Attack
Jump Main
Return
//==== <<< 主进程 ====

//群持续
RHD:
if ExtVar[22]>0 && Time-var3>ExtVar[22] then
Call TargetSelf
SendKey(ExtVar[11])
Delay(6000)
SendKey(ExtVar[10])
Delay(3000)
var3=Time
end if
Return

//大药
BuffMedicine:
if ExtVar[20]>0 && Time-var1>ExtVar[20] then
SendKey(ExtVar[5])
Delay(3000)
SendKey(ExtVar[7])
Delay(15000)
SendKey(ExtVar[31])
Delay(3000)
var1=Time
end if
Return

//姿势
BuffPosture:
if ExtVar[21]>0 && Time-var2>ExtVar[21] then
SendKey(ExtVar[31])
Delay(3000)
var2=Time
end if
Return

//选择自己
TargetSelf:
SendKey(ExtVar[1])
Delay(50)
Return

//默认循环流程
Attack:
Call TargetSelf
SendKey(ExtVar[8])
Delay(5000)
SendKey(ExtVar[8])
Delay(5000)
SendKey(ExtVar[9])
Delay(8000)
Return
